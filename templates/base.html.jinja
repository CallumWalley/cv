<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <title>Curriculum Vitae</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../base.css">
</head>

<body>

    <h1 id="name"></h1> &nbsp; <span class="docname">Curriculum Vit&aelig;</span>
    <div class="vline"></div>

    <div class="main">
        {% if education|length > 0 %}
        <div class="column column--left">
            <h2 id="education">Education</h2>
            <div class="block">
                {% for item in education %}
                <div class="item">
                    <div class="yearrange">{{item.startDate}}&#8211;{{item.endDate}}</div>
                    <div class="yearright">
                        <strong>{{item.institution}}</strong><br />
                        {{item.area}}-{{item.studyType}}<br />
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
        {% if work|length > 0 %}
        <div class="column column--right">
            <h2 id="work">Work</h2>
            <div class="block">
                {% for item in work | sort(attribute='startDate') %}
                <div class="item">
                    <h3 class="comp comp__header">{{item.startDate}}&#8211;{{item.endDate}} - {{item.name}}
                </div>
                <div class="comp comp__body">
                    <i class=" comp comp__icon material-icons">
                        alternate_email
                    </i>
                    <div class="comp content">
                        <p>{{item.position}}</p><br />
                        <p>{{item.summary}}</p><br />
                        {% if work.highlights | length > 0 %}
                        {% for hl in work.highlights %}
                        {{hl}}<br />
                        {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
    </div>
    <div class="block">
        {% for reference in references %}
        <div class="onelineitem">
            {% include "includes/reference_card.html.jinja" %}
        </div>
        {% endfor %}
    </div>
</body>

</html>