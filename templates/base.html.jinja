<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <title>Curriculum Vitae</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../base.css">
</head>

<body>
    <h1 id="name"></h1> &nbsp; <span class="docname">Curriculum Vit&aelig;</span>
    <div class="vline"></div>
    <div class="main">
        <div class="column column--left">
            {% if education|length > 0 %}
            <h2 id="education">Education</h2>
            <div class="block">
                {% for item in education %}
                <div class="item">
                    <div class="comp comp__header">
                        <h3> {{item.institution}} </h3>
                        <div class="yearrange">{{item.startDate}}&#8211;{{item.endDate}}</div>
                    </div>
                    <div class="comp comp__body">
                        <em>{{item.area}}-{{item.studyType}}</em>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
            {% if (work + volunteer)|length > 0 %}
            <h2 id="work">Work</h2>
            <div class="block">
                {% for item in ((work + volunteer) | sort(attribute='startDate')) %}
                <div class="item">
                    <div class="comp comp__header">
                        <h3>{{item.name}}</h3>
                        <div class="yearrange">{{item.startDate}}&#8211;{{item.endDate}}</div>
                    </div>
                    <div class="comp comp__body">
                        <i class=" comp comp__icon material-icons">
                            alternate_email
                        </i>
                        <div class="comp comp--flexcol">
                            <em>{{item.position}}</em>
                            <p>{{item.summary}}</p>
                            {% if work.highlights | length > 0 %}
                            {% for hl in work.highlights %}
                            {{hl}}
                            {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
        <div class="column column--right">
            {% if (skills)|length > 0 %}
            <h2 id="skills">Skills</h2>
            <div class="block">
                {% for item in skills %}
                <div class="item">
                    <div class="comp comp__header">
                        <h3 class="comp comp__header">{{item.name}}</h3>
                    </div>
                    <div class="comp comp__body">
                        <i class=" comp comp__icon material-icons">
                            alternate_email
                        </i>
                        <div class="comp comp--flexcol">
                            {{item.description}}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
            {% if (languages)|length > 0 %}
            <h2 id="languages">Languages</h2>
            <div class="block">
                {% for group, items in languages|groupby(attribute="rating", default="It's complicated") %}
                <div class="item">
                    <h3>{{group}}</h3>
                    {%for item in items %}
                    <div class="comp">{{item.language}}</div>
                    {%endfor%}
                </div>
                {% endfor %}
            </div>
            {%endif%}
            {% if (qualifications)|length > 0 %}
            <h2 id="qualifications">Qualifications</h2>
            <div class="block">
                {%for qual in qualifications%}
                <div class="item">{{qual.issuer_short or qual.issuer}} {{qual.name}}</div>
                {%endfor%}
            </div>
            {%endif%}
        </div>
    </div>
    <div class="block" style="display: none;">
        {% for reference in references %}
        <div class="onelineitem">
            {% include "includes/reference_card.html.jinja" %}
        </div>
        {% endfor %}
    </div>
</body>

</html>